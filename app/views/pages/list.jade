extends ../layout

block content
	.container(style="margin-top:50px")
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 类别
						th 名字
						th 老师
						th 年份
						th 录入时间
						th 浏览
						th 查看
						th 更新
						th 删除
				tbody
					each item in movies
						tr(class="item-id-#{item._id}")
							td #{item.category.name}
							td #{item.title}
							td #{item.doctor}
							td #{item.year}
							td #{moment(item.meta.createAt).format('YYYY-MM-DD HH:mm:ss')}
							td #{item.pv}
							td: a(target="_blank", href="../../movie/#{item._id}") 观看
							td: a(target="_blank", href="../movie/update/#{item._id}") 修改
							td
								button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
	script(src="/js/admin.js")标题