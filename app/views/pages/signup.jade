extends ../layout

block content
	.container(style="margin-top:50px")
		.signin-content
				form.signin-form(method="POST",action="/user/signup/",id="signupform")
					//- 注册
					.modal-header 注册
					.modal-body#signin-input(name="form1")
						input.form-control(name="user[name]",type="text",placeholder="请输入5-12位的用户名")
						input.form-control#password(name="user[password]",type="password",placeholder="请输入5-12位的密码")
						input.form-control(name="confirmpassword",type="password",placeholder="请确认输入的密码")
						input.form-control(name="user[email]",type="email",placeholder="请输入邮箱")
					.modal-footer
						button.btn.btn-signin(type="submit",onClick="myCheck()") 注册
	script(src="../js/validation.js")